      V_coe = 1.0d0 !> coupling constant for V matrix
      coupled_bf = 1 !> index of the coupled boson field
      pla_tsl_vec = 2,0,
                   1,1 
      pla_tsl_offset_vec = 1,0
      pla_int_vec = 0,0,
                    1,0
      Kmatrix = (0,0),(1,0),
                (1,0),(0,0)
      Vmatrix = (0,0),(0,1),
                (0,-1),(0,0)
/

